<UserControl x:Class="ParkCinema.Views.UserControls.BackgroundImageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkCinema.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel >
            <Image Name="secondImage" Source="{Binding backImage.ImagePath}" ></Image>
            <TextBlock Text="{Binding backImage.MovieDate}" Width="250" Height="80" HorizontalAlignment="Left" Margin="80,220,0,0"></TextBlock>
            <Button Width="100" Height="50" Margin="150,30,0,0" HorizontalAlignment="Left" Background="Blue" Foreground="White" FontSize="25" FontWeight="ExtraBlack" Content="BUY">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="50"></Setter>
                </Style>
            </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
